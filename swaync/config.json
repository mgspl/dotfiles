{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "cssPriority": "user",
  "control-center-margin-top": 2,
  "control-center-margin-bottom": 2,
  "control-center-margin-right": 1,
  "control-center-margin-left": 0,
  "notification-icon-size": 64,
  "notification-body-image-height": 128,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 400,
  "control-center-height": 730,
  "notification-window-width": 200,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "dnd",
    "menubar#desktop",
    "volume",
    "mpris",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": " Centro de Controle",
      "clear-all-button": true,
      "button-text": ""
    },
    "menubar#desktop": {
      "menu#screenshot": {
        "label": "\t󰄀  Captura de Tela\t",
        "position": "left",
        "actions": [
          {
            "label": "Tela cheia",
            "command": "sh -c 'swaync-client -cp; sleep 1; grimblast copysave output \"/tmp/screenshot.png\"; swappy -f \"/tmp/screenshot.png\"'"
          },
          {
            "label": "Janela / Região",
            "command": "sh -c 'swaync-client -cp; grimblast copysave area \"/tmp/screenshot.png\"; swappy -f \"/tmp/screenshot.png\"'"
          }
        ]
      },
      "menu#power": {
        "label": "\t  Power Menu\t  ",
        "position": "left",
        "actions": [
          {
            "label": "  Logout",
            "command": "mmsg -q"
          },
          {
            "label": "   Desligar",
            "command": "systemctl poweroff"
          },
          {
            "label": "󰤄   Suspender",
            "command": "systemctl suspend"
          },
          {
            "label": "   Reiniciar",
            "command": "systemctl reboot"
          }
        ]
      }
    },
    "volume": {
      "label": " ",
      "expand-button-label": " ",
      "collapse-button-label": " ",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": true
    },
    "dnd": {
      "text": " Não pertube"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 4
    },
    "label": {
      "text": "Notficações",
      "clear-all-button": true,
      "button-text": ""
    }
  },
  "scripts": {
    "notification-visibility": {
      "youtube-music": {
        "state": "enabled",
        "urgency": "Low",
        "app-name": "com.github.th_ch.youtube_music"
      }
    }
  }
}
